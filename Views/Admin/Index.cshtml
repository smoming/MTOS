@model LoginViewModel

@using (Html.BeginForm("AdminList", Html.ControllerName()))
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                @Html.TextBoxBuilder(m => m.Name, "帳號")
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                @Html.TextBoxBuilder(m => m.Password, "密碼")
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                @Html.ButtonBuilder(ButtonType.submit, "btnSave", "登入")
                @Html.ButtonBuilder(ButtonType.button, "btnCancel", "取消")
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(function () {
        var message = @Html.Raw(Json.Encode(TempData["message"]));
        if (message != null) {
            alert(message);
        }

        $('#btnCancel').on('click', function () {
            location.href = '/Home';
        });
    });
</script>