@model PRODUCT_DOCUMENT

@using (Html.BeginForm("Update", Html.ControllerName(), FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                @Html.EditorForModel()
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.ButtonBuilder(ButtonType.submit, "btnSave", "儲存")
                @Html.ButtonBuilder(ButtonType.button, "btnCancel", "取消")
                @Html.ButtonBuilder(ButtonType.button, "btnDelete", "刪除")
                @Html.ActionLink("下載檔案", "DownloadFile", new { xGUID = Model.GUID }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}
