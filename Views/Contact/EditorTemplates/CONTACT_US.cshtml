@model CONTACT_US

@Html.HiddenFor(m => m.GUID)
<div class="row">
    <div class="col-md-6">
        @Html.TextBoxBuilder(m => m.LAST_NAME, "姓氏")
    </div>
    <div class="col-md-6">
        @Html.TextBoxBuilder(m => m.EMAIL, "電子信箱")
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        @Html.TextBoxBuilder(m => m.NAME, "名子")
    </div>
    <div class="col-md-6">
        @Html.TextBoxBuilder(m => m.PHONE, "電話")
    </div>
</div>
<div class="row">
    <div class="col-md-11">
        @Html.TextBoxBuilder(m => m.SUBJECT, "主題")
    </div>
</div>
<div class="row">
    <div class="col-md-11">
        @Html.TextAreaBuilder(m => m.MESSAGE, "訊息內容")
    </div>
</div>
<div class="row">
    <div class="col-md-11">
        @Html.DropDownListBuilder(m => m.SUBSCRIPTION, 
            new List<SelectListItem>() { 
                new SelectListItem() { Value = Boolean.TrueString, Text = "是"},
                new SelectListItem() { Value = Boolean.FalseString, Text = "否"} }, "訂閱")
    </div>
</div>

<style>
    #SUBJECT, #MESSAGE {
        max-width: none;
        width: 100%;
    }

    #MESSAGE {
        height: 10em;
    }
</style>




